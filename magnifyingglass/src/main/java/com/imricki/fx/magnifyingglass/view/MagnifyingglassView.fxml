<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="componentView" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Button fx:id="zoomOutbtn" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onZoomOut" HBox.hgrow="NEVER">
         <HBox.margin>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </HBox.margin>
         <graphic>
            <ImageView pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../resources/in.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="zoomInbtn" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onZoomIn" HBox.hgrow="NEVER">
         <HBox.margin>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </HBox.margin>
         <graphic>
            <ImageView pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../resources/out.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Label fx:id="percentageLabel" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" text="\%" HBox.hgrow="NEVER">
         <HBox.margin>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </HBox.margin>
      </Label>
      <ComboBox fx:id="viewsCombobox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#onViews" promptText="Views" visibleRowCount="5" HBox.hgrow="NEVER">
         <HBox.margin>
            <Insets left="10.0" right="2.0" top="2.0" />
         </HBox.margin>
      </ComboBox>
      <Button fx:id="settingsbtn" contentDisplay="CENTER" lineSpacing="5.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onSettings" HBox.hgrow="NEVER">
         <HBox.margin>
            <Insets bottom="2.0" left="40.0" right="2.0" top="2.0" />
         </HBox.margin>
         <graphic>
            <ImageView pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../resources/settings.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</HBox>
