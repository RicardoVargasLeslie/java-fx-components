                        <ImageView>
                           <image>
                              <Image url="@../images/iconfinder_water_1054937%20(1).png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
