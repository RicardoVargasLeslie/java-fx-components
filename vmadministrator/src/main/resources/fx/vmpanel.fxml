                        <KeyCodeCombination alt="UP" code="A" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About">
                     <graphic>
                        <ImageView>
                           <image>
                              <Image url="@../images/iconfinder_profle_1055000.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </MenuItem>
            </items>
               <accelerator>
                  <KeyCodeCombination alt="UP" code="H" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
               </accelerator>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <ListView BorderPane.alignment="CENTER" />
   </left>
   <center>
      <BorderPane BorderPane.alignment="CENTER">
         <top>
            <ToolBar BorderPane.alignment="TOP_RIGHT">
              <items>
                <Button fx:id="settingsbtn" alignment="BOTTOM_CENTER" contentDisplay="TOP" mnemonicParsing="false" onAction="#onSettings" text="Settings">
                     <graphic>
                        <ImageView>
                           <image>
                              <Image url="@../images/settings.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="importbtn" contentDisplay="TOP" mnemonicParsing="false" onAction="#onImport" text="Import">
                     <graphic>
                        <ImageView>
                           <image>
                              <Image url="@../images/import.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="exportbtn" contentDisplay="TOP" mnemonicParsing="false" onAction="#onExport" text="Export">
                     <graphic>
                        <ImageView>
                           <image>
                              <Image url="@../images/export.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="newbtn" contentDisplay="TOP" mnemonicParsing="false" onAction="#onNew" text="New">
                     <graphic>
                        <ImageView>
                           <image>
                              <Image url="@../images/new.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="addbtn" contentDisplay="TOP" mnemonicParsing="false" onAction="#onAdd" text="Add">
                     <graphic>
                        <ImageView>
